{
  "name": "wpstorm-messenger",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preview": "npm-run-all --parallel sync wpstart tailwindwatch",
    "adminpreview": "npm-run-all --parallel adminsync adminwpstart admintailwindwatch",
    "sync": "browser-sync start --no-open --proxy 'http://localhost/wpstorm-chat' --files '**/*.php' 'build/chat-widget/*.js' 'build/chat-widget/*.css'",
    "build": "npm-run-all --sequential wpbuild tailwindbuild",
    "start": "npm-run-all --parallel wpstart tailwindwatch",
    "wpbuild": "wp-scripts build src/index.js --output-path=build/chat-widget",
    "wpstart": "wp-scripts start src/index.js --output-path=build/chat-widget",
    "tailwindbuild": "tailwindcss -i src/index.css -o ./build/chat-widget/build.css --postcss --minify",
    "tailwindwatch": "tailwindcss -i src/index.css -o ./build/chat-widget/build.css --watch --postcss --minify",
    "adminsync": "browser-sync start -p localhost/wpstorm-chat --files build/*.js build/*.css",
    "adminbuild": "npm-run-all --sequential adminbuildwp tailwindbuild",
    "adminstart": "npm-run-all --parallel adminwpstart tailwindwatch",
    "adminbuildwp": "wp-scripts build src/admin-page/index.js --output-path=build/admin-page",
    "adminwpstart": "wp-scripts start src/admin-page/index.js --output-path=build/admin-page",
    "admintailwindbuild": "tailwindcss -i ./src/admin-page/index.css -o ./build/admin-page/index.css --postcss --minify",
    "admintailwindwatch": "tailwindcss -i ./src/admin-page/index.css -o ./build/admin-page/index.css --watch --postcss --minify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@wordpress/element": "^5.34.0",
    "@wordpress/i18n": "^4.57.0",
    "@wordpress/scripts": "^27.8.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.6.8",
    "browser-sync": "^3.0.2",
    "emoji-mart": "^5.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-nested": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.23.1",
    "tailwindcss": "^3.4.3",
    "use-immer": "^0.9.0"
  }
}
